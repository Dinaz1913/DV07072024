{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block content %}
    <div class="container mx-auto mt-10">
        <h1 class="text-3xl font-bold mb-4">Articles</h1>
        <ul>
            {% for article in articles %}
                <li class="mb-4">
                    <a href="/articles/{{ article.id }}" class="text-blue-500">{{ article.title }}</a>
                    <p class="text-gray-700">{{ article.content }}</p>
                    <a href="/articles/edit/{{ article.id }}" class="text-green-500">Edit</a>
                    <form action="/articles/{{ article.id }}" method="POST" class="inline">
                        <input type="hidden" name="_METHOD" value="DELETE">
                        <button type="submit" class="text-red-500">Delete</button>
                    </form>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
